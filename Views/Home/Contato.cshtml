@model List<ContatoModel>
@{
    Layout = "_Layout";
}
<table class="table">

    <div class="text-block">
        <a class="btn btn-primary" role="button" asp-controller="Home" asp-action="Criar"> Adicionar novo contato </a>
    </div>

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th scope="col">Contato</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(ContatoModel contato in Model)
            {
                 <tr>
            <th scope="row">@contato.Id</th>
            <td>@contato.Name</td>
            <td>@contato.Email</td>
            <td>@contato.Celular</td>
			<td>
				<div class="d-grid gap-2 d-md-block">
					<a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Editar">Editar</a>
                    <a role="button" class="btn btn-danger" asp-controller="Home" asp-action="Apagar">Apagar</a>
				</div>
			</td>
            
        </tr>
            }
        }
       
 
    </tbody>
</table>